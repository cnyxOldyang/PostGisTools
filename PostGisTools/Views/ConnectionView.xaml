<UserControl x:Class="PostGisTools.Views.ConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:PostGisTools.Core"
             xmlns:res="clr-namespace:PostGisTools.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{Binding Title}" Foreground="#E0E0E0" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="{x:Static res:Strings.ConnectionIntroText}" Foreground="#A0A0A0" Margin="0,8,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#252526" BorderBrush="#333333" BorderThickness="1" CornerRadius="6" Padding="16">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#E0E0E0"/>
                        <Setter Property="BorderBrush" Value="#3C3C3C"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                    <Style TargetType="PasswordBox">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#E0E0E0"/>
                        <Setter Property="BorderBrush" Value="#3C3C3C"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static res:Strings.ConnectionLabelHost}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,6,18,6" Padding="8" Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="0" Grid.Column="2" Text="{x:Static res:Strings.ConnectionLabelPort}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" Margin="0,6,0,6" Padding="8" Text="{Binding PortText, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:Strings.ConnectionLabelDatabase}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,6,0,6" Padding="8" Text="{Binding Database, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static res:Strings.ConnectionLabelUsername}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,6,0,6" Padding="8" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static res:Strings.ConnectionLabelPassword}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,6,0,6" Padding="6"
                             core:PasswordBoxAssistant.BindPassword="True"
                             core:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,14,0,0">
                    <Button Content="{x:Static res:Strings.ConnectionButtonTest}" Command="{Binding TestConnectionCommand}" Padding="16,10" BorderThickness="1" BorderBrush="#3C3C3C" Background="#2D2D30" HorizontalAlignment="Left"/>

                    <Border Margin="14,0,0,0" Padding="10,8" CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="BorderBrush" Value="#3C3C3C"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="BorderBrush" Value="#2E7D32"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusMessage}" Value="">
                                        <Setter Property="Opacity" Value="0.75"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#CCCCCC"/>
                    </Border>
                </StackPanel>

                <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,12,0,0" Foreground="#808080" TextWrapping="Wrap"
                           Text="{x:Static res:Strings.ConnectionPasswordNote}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
